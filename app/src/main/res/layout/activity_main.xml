<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.500011DProject.AppBarOverlay"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_yellow"
            app:popupTheme="@style/Theme.500011DProject.PopupOverlay"
            app:menu="@menu/menu_main"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/menu_hamburger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:adjustViewBounds="true"
        android:src="@drawable/hamburger"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/menu_food_alpacas"
        android:shadowColor="@color/black"
        android:shadowDx="8"
        android:shadowDy="8"
        android:shadowRadius="20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_mono_one"
        android:lineSpacingExtra="8sp"
        android:text="@string/menu_food_alpacas"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/yellow"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/menu_hamburger"
        app:layout_constraintEnd_toEndOf="@+id/menu_hamburger"
        app:layout_constraintStart_toStartOf="@id/menu_hamburger"
        app:layout_constraintTop_toTopOf="@id/menu_hamburger"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="200dp"/>

    <ImageView
        android:id="@+id/rounded_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/alpacas"
        app:layout_constraintBottom_toTopOf="@+id/menu_button_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/rounded_corner"/>

    <Button
        android:id="@+id/menu_button_profiles"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/rubik_mono_one"
        android:text="@string/menu_button_profiles"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/menu_button_blocklist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/menu_button_blocklist"
        android:text="@string/menu_button_blocklist"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:fontFamily="@font/rubik_mono_one"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:visibility="visible"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"/>

    <Button
        android:id="@+id/menu_button_list"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="6dp"
        android:fontFamily="@font/rubik_mono_one"
        android:text="@string/menu_button_list"
        android:textAlignment="center"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_button_profiles"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="@color/blue"
        app:strokeWidth="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

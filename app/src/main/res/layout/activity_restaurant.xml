<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RestaurantActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        app:popupTheme="@style/Theme.500011DProject.PopupOverlay"
        app:menu="@menu/menu_main"
        app:layout_constraintTop_toTopOf="parent"
        >

    </androidx.appcompat.widget.Toolbar>

    <ImageButton
        android:id="@+id/details_button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        android:contentDescription="back to the menu"
        app:srcCompat="@drawable/ic_back" />

    <TextView
        android:id="@+id/details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_details_label"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/rubik_mono_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="@id/details_label"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:background="@color/white">

        <ImageView
            android:id="@+id/restaurant_open_now_image_view"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/design_default_color_on_primary"
            android:scaleType="centerCrop"
            android:contentDescription="@string/restaurant_open_now"/>

        <TextView
            android:id="@+id/restaurant_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/restaurant_name_text_view"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/restaurant_address_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/restaurant_address_header"
            android:textSize="20dp"
            android:textFontWeight="2"
            />


        <TextView
            android:id="@+id/restaurant_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/restaurant_address_text_view"
            android:textSize="16sp"
            android:textAlignment="viewStart"
            />

        <TextView
            android:id="@+id/restaurant_rating_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/restaurant_rating_header"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/restaurant_rating_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/restaurant_rating_text_view"
            android:textSize="16sp"
            android:textAlignment="viewStart"/>

        <TextView
            android:id="@+id/restaurant_price_level_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_price_level_header"
            android:layout_marginTop="8dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/restaurant_price_level_text_view"
            android:text="@string/restaurant_price_level"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:textAlignment="viewStart"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">





            <Button
                android:id="@+id/restaurant_directions_button"
                style="?attr/materialButtonOutlinedStyle"
                android:textSize="14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_weight="1"
                android:text="@string/restaurant_directions_button"
                android:fontFamily="@font/rubik_mono_one"
                android:textAlignment="center"
                android:textColor="@color/blue"
                app:strokeColor="@color/blue"
                app:strokeWidth="2dp"
                app:cornerRadius="10dp"
                android:layout_marginStart="70dp"
                android:layout_marginEnd="70dp"
                android:backgroundTint="@color/light_yellow"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>